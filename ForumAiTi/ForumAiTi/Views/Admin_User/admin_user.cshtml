@{
    ViewData["Title"] = "Quản lý người dùng";
	Layout = "~/Views/Shared/_Layout_admin.cshtml";
    ForumAiTiContext _context = new ForumAiTiContext();
    string getAvatar(byte[] avataar)
    {
        if (avataar == null) return "/images/noneavatar.jpg";
        string imageBase64Data = Convert.ToBase64String(avataar);
        string imageDataURL = string.Format("data:image/jpg;base64,{0}", imageBase64Data);
        return imageDataURL;
    }
}
@model List<NguoiDung>
    <!-- Close Header -->
    <section class="container-fluid my-2 px-5 bg-submenu p-2">
        <div class="container-fluid bg-forum2">
            <h3 class="text-forum-orange mb-0 p-2">
                <oke class="bg-text-forum p-1">Management</oke>
                <oke class="text-forum-submenu">Forum</oke> / Người dùng
            </h3>
        </div>
    </section>
    <!-- Modal -->
    <!-- Start Categories of The Month -->
    <section class="mx-5 my-2 ">
        <div class="row m-0">
            <div class="col-12 p-0 bg-forum2" id="admin-left">
                <div class="container-fluid mb-2">
                    <div class="row p-1">
                        <div class="col-6"></div>
                        <div class="col-6 p-2">
                            <button class="btn btn-addUser" id="addUser-btn">Thêm mới</button>
                        </div>
                    </div>
                    <table id="example" class="table table-striped table-hover table-success" style="width:100%">
                        <thead>
                            <tr>
                                <th>Tài khoản</th>
                                <th>Họ và tên</th>
                                <th>Sinh nhật</th>
                                @* <th>Giới tính</th> *@
                                <th>Hình ảnh</th>
                                <th>Nghề nghiệp</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                            <tr>
                                <td>@item.TaiKhoan</td>
                                <td>@item.HoTen</td>
                                <td>@String.Format("{0:dd/MM/yyyy}", item.SinhNhat)</td>
                                @* <td></td> *@
                                <td><img src="@getAvatar(item.HinhAnh)" alt=""></td>
                                <td>@item.NgheNghiep</td>
                            </tr>
                            }
                            

                        <tfoot>
                            <tr>
                                <th>Tài khoản</th>
                                <th>Họ và tên</th>
                                <th>Sinh nhật</th>
                                @* <th>Giới tính</th> *@
                                <th>Hình ảnh</th>
                                <th>Nghề nghiệp</th>
                            </tr>
                        </tfoot>
                    </table>
                </div>
            </div>
            <div class="col-12 col-md-4 col-lg-4" id="admin-right">
                <h2 id="text-mess-user" class="py-4 bg-forum text-center "><i class="fa fa-television" aria-hidden="true"></i> Thêm mới</h2>
                <div class="row ">
                    <div class="col-12">
                        <div class="row edit-infor" id="div-edit-remove">
                            <div class="col-6">
                                <button class="btn btn-confirm" id="edit-btn">Chỉnh sửa</button>
                            </div>
                            <div class="col-6">
                                <button class="btn btn-cancel" id="remove-btn">Xóa</button>
                            </div>
                        </div>
                        <div class="row edit-infor">
                            <label for="fullname">Họ và tên</label>
                            <input type="text" name="fullname" value="" id="fullname">
                        </div>
                        <div class="row edit-infor">
                            <label for="fullname">Tài khoản</label>
                            <input type="text" name="Taikhoan" value="" id="Taikhoan">
                        </div>
                        <div class="row edit-infor">
                            <label for="fullname">Mật khẩu</label>
                            <div id="divPass">
                                <input type="password" name="Matkhau" value="" id="Matkhau">
                                <i toggle="#Matkhau" class="fa fa-eye" id="hidepass"></i>
                            </div>
                        </div>
                        <div class="row edit-infor">
                            <label for="birthday">Sinh nhật</label>
                            <input type="date" name="birthday" value="" id="birthday">
                        </div>
                        <div class="row edit-infor">
                            <label for="listjob">Nghề nghiệp</label>
                            <select name="listjob" id="listjob">
                                <option value="1">Sinh viên</option>
                                <option value="2">Kỹ sư AiTi</option>
                                <option value="3">Giáo viên</option>
                            </select>
                        </div>
                        <div class="row edit-infor">
                            <label for="listjob">Giới tính</label>
                            <select name="listjob" id="listjob">
                                <option value="1">Nam</option>
                                <option value="2">Nữ</option>
                                <option value="3">Không xác định</option>
                            </select>
                        </div>
                        <div class="row edit-infor">
                            <label for="listjob">Vai trò</label>
                            <select name="listjob" id="listjob">
                                <option value="ADMIN">ADMIN</option>
                                <option value="USER">USER</option>
                            </select>
                        </div>
                        <div id="div-cancel-confirm">
                            <a href="admin_account.html"><button class="btn btn-cancel">Hủy</button></a>
                            <button class="btn btn-confirm">Xác nhận</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
