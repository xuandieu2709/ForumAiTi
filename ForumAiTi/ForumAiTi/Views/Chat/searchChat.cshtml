@{
    ForumAiTiContext _context = new ForumAiTiContext();
    CttroChuyen getFinalMess(string taikhoan)
        {
            CttroChuyen final = _context.CttroChuyen.OrderByDescending(x =>x.ThoiGianGui).FirstOrDefault(x => x.NguoiGui == taikhoan || x.NguoiGui == User.FindFirst("TaiKhoan").Value.Trim());
            return final;
        }
        NguoiDung getUSERByTK(string tk)
        {
            return _context.NguoiDung.Where(x => x.TaiKhoan == tk).FirstOrDefault();
        }
        string getAvatar(byte[] avataar)
    {
        if (avataar == null) return "/images/noneavatar.jpg";
        string imageBase64Data = Convert.ToBase64String(avataar);
        string imageDataURL = string.Format("data:image/jpg;base64,{0}", imageBase64Data);
        return imageDataURL;
    }
    CttroChuyen getLastMess(int ma)
    {
        return _context.CttroChuyen.OrderBy(x => x.ThoiGianGui).FirstOrDefault(x => x.TinhTrang == false);
    }
}
@model List<NguoiDung>
    @if(ViewBag.textSearch.Equals("1"))
    {
        <div id="chat-friend" data-mdb-perfect-scrollbar="true"
                                    style="position: relative; height: 500px">
                                    <ul class="list-unstyled mb-0">
                                        @if (((IEnumerable<TroChuyen>)ViewBag.ListChat).Count() == 0)
                                        {
                                            <li class="p-2 border-bottom">
                                                <h2 class="text-center">Bạn chưa có cuộc trò chuyện nào</h2>
                                            </li>
                                        }
                                        else
                                        {
                                            @foreach (var item in (IEnumerable<TroChuyen>)ViewBag.ListChat)
                                            {
                                                <li class="p-2 border-bottom">
                                                    <a href="#!" class="d-flex justify-content-between">
                                                        <div class="d-flex flex-row">
                                                            <div>
                                                                @if (item.ThanhVien1.Trim().Equals(User.FindFirst("TaiKhoan").Value.Trim()))
                                                                {
                                                                    <img src="@getAvatar(getUSERByTK(item.ThanhVien1).HinhAnh)"
                                                                        alt="avatar" class="d-flex m-auto" width="80" style="height: 80px; border: 2px solid #12b1ac; border-radius: 50%;">
                                                                }
                                                                else
                                                                {
                                                                    <img src="@getAvatar(getUSERByTK(item.ThanhVien2).HinhAnh)"
                                                                        alt="avatar" class="d-flex m-auto" width="80" style="height: 80px; border: 2px solid #12b1ac; border-radius: 50%;">
                                                                }
                                                                @* <span class="badge bg-success badge-dot"></span> *@
                                                            </div>
                                                            <div class="pt-1">
                                                                @if (item.BdnguoiNhan != null)
                                                                {
                                                                    <p class="fw-bold mb-0">@item.BdnguoiNhan</p>
                                                                }
                                                                @* else if(getUSERByTK(item.ThanhVien1).HoTen != null)
                                                        {

                                                        } *@
                                                                <p class="small text-muted">@getLastMess(item.MaTroChuyen)</p>
                                                            </div>
                                                        </div>
                                                        <div class="pt-1">
                                                            <p class="small text-muted mb-1">Vừa gửi</p>
                                                            <span class="badge bg-danger rounded-pill float-end">3</span>
                                                        </div>
                                                    </a>
                                                </li>
                                            }
                                        }
                                    </ul>
                                </div>
    }
    else if(ViewBag.textSearch.Equals("2")){
        <div id="chat-friend" data-mdb-perfect-scrollbar="true" style="position: relative; height: 500px">
            <ul class="list-unstyled mb-0">
        @if (Model.Count() == 0)
        {
            <li class="p-2 border-bottom">
                <h2 class="text-center">Không tìm thấy thành viên nào.</h2>
            </li>
        }
        else
        {
            @foreach (var item in Model)
            {
                <li class="p-2 border-bottom">
                    <a href="#!" class="d-flex justify-content-between">
                        <div class="d-flex flex-row">
                            <div class="mr-2">
                                <img src="@getAvatar(getUSERByTK(item.TaiKhoan).HinhAnh)" alt="avatar"
                                        class="d-flex m-auto" width="80" style="height: 80px; border: 2px solid #12b1ac; border-radius: 50%;">
                                @* <span class="badge bg-success badge-dot"></span> *@
                            </div>
                            @if(getFinalMess(item.TaiKhoan) != null)
                            {
                            <div class="pt-1">
                                    <p class="fw-bold mb-0">@item.TaiKhoan</p>
                                <p class="small text-muted">@getFinalMess(item.TaiKhoan)</p>
                            </div>
                            }else{
                            <div class="pt-1">
                                    <p class="fw-bold mb-0">@item.TaiKhoan</p>
                                <p class="small text-muted">Bạn chưa có tin nhắn nào với thành viên này</p>
                            </div>   
                            }
                        </div>
                        @if(getFinalMess(item.TaiKhoan) != null)
                        {
                        <div class="pt-1">
                            <p class="small text-muted mb-1">Vừa gửi</p>
                            <span class="badge bg-danger rounded-pill float-end">3</span>
                        </div>
                        }
                    </a>
                </li>
            }
        }
    </ul>
</div>
    }