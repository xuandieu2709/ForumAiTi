<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Đăng ký</title>
    <link rel="shortcut icon" href="images/logoIT-border.png" type="image/x-icon">
    <link rel="stylesheet" href="css/style-login.css">
    <!-- <link rel="stylesheet" href="css/style.css"> -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <!-- boostrap 4-6-2-->
    <!-- Latest compiled and minified CSS -->
    <link rel="stylesheet" href="dist/css/bootstrap.min.css">

    <!-- jQuery library -->
    <script src="dist/jquery/jquery.slim.min.js" type="text/javascript"></script>

    <!-- Popper JS -->
    <script src="dist/js/popper.min.js " type="text/javascript"></script>

    <!-- Latest compiled JavaScript -->
    <script src="dist/js/bootstrap.bundle.min.js" type="text/javascript"></script>
    <!--  -->
</head>

<body>

    <body class="img js-fullheight" style="background-image: url(images/bg-forum.jpg);">
        <section class="ftco-section">
            <div class="container">
                <div class="row justify-content-center">
                    <div class="col-md-6 col-lg-5 col-10 login">
                        <img class="logo-login" src="images/logoIT-border.png" alt="">
                        <div class="login-wrap px-2 py-2" id="forget-wrap">
                            <h3 class="mb-5 text-center">Quên mật khẩu</h3>
                            <form action="#" class="signin-form">
                                <div class="form-group">
                                    <input type="text" class="form-control" placeholder="Email của bạn" required>
                                </div>
                                <div class="form-group">
                                    <button id="confirm1" type="submit" class="form-control btn-login submit px-3">Xác nhận</button>
                                </div>
                                <div class="form-group">
                                    <a href="login.html" class="btn btn-info">Quay lại</a>
                                </div>
                            </form>
                        </div>
                        <div class="login-wrap px-2 py-2" id="cofirm-wrap">
                            <h3 class="mb-5 text-center">Xác minh mã</h3>
                            <form action="#" class="signin-form">
                                <div class="form-group">
                                    <input type="text" class="form-control" placeholder="Nhập mã xác minh" required>
                                </div>
                                <div class="form-group">
                                    <button id="confirm2" type="submit" class="form-control btn-login submit px-3">Xác nhận</button>
                                </div>
                                <div class="form-group">
                                    <a href="login.html" class="btn btn-info">Quay lại</a>
                                </div>
                            </form>
                        </div>
                        <div class="login-wrap px-2 py-2" id="update-wrap">
                            <h3 class="mb-5 text-center">Cập nhật mật khẩu</h3>
                            <form action="#" class="signin-form">
                                <div class="form-group">
                                    <input id="password-field" type="password" class="form-control"
                                        placeholder="Mật khẩu mới" required>
                                    <span toggle="#password-field"
                                        class="fa fa-fw fa-eye field-icon toggle-password"></span>
                                </div>
                                <div class="form-group">
                                    <input id="password-field1" type="password" class="form-control"
                                        placeholder="Xác nhận lại mật khẩu" required>
                                    <span toggle="#password-field1"
                                        class="fa fa-fw fa-eye field-icon toggle-password"></span>
                                </div>
                                <div class="form-group">
                                    <button id="confirm3" type="submit" class="form-control btn-login submit px-3">Xác nhận</button>
                                </div>
                                <div class="form-group">
                                    <a href="login.html" class="btn btn-info">Quay lại</a>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </section>
        <script>
            $(document).ready(function(){
                $('#forget-wrap').show();
                $('#cofirm-wrap').hide();
                $('#update-wrap').hide();
            });
            $('#confirm1').on('click', function(){
                event.preventDefault();
                $('#forget-wrap').hide();
                $('#cofirm-wrap').show();
                $('#update-wrap').hide();

            });
            $('#confirm2').on('click', function(){
                event.preventDefault();
                $('#forget-wrap').hide();
                $('#cofirm-wrap').hide();
                $('#update-wrap').show();
            });
            // $('#confirm3').on('click', function(){
            //     event.preventDefault();
                
            // });
        </script>
        <script src="js/login.js"></script>
        <script src="js/main.js"></script>
    </body>

</html>