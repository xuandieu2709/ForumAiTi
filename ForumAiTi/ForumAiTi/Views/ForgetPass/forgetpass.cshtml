@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Đăng ký</title>
    <link rel="shortcut icon" href="~/images/logoIT-border.png" type="image/x-icon">
    <link rel="stylesheet" href="~/css/style-login.css">">
    <!-- <link rel="stylesheet" href="css/style.css"> -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <!-- boostrap 4-6-2-->
    <!-- Latest compiled and minified CSS -->
    <link rel="stylesheet" href="~/dist/css/bootstrap.min.css">

    <!-- jQuery library -->
    <script src="~/dist/jquery/jquery.slim.min.js" type="text/javascript"></script>

    <!-- Popper JS -->
    <script src="~/dist/js/popper.min.js " type="text/javascript"></script>

    <!-- Latest compiled JavaScript -->
    <script src="~/dist/js/bootstrap.bundle.min.js" type="text/javascript"></script>
    <!--  -->
</head>

<body class="img js-fullheight" style="background-image: url(/images/bg-forum.jpg);">
    <section class="ftco-section">
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-md-6 col-lg-5 col-10 login">
                    <a href="/home"><img class="logo-login" src="~/images/logoIT-border.png" alt=""></a>
                    <div class="login-wrap px-2 py-2" id="forget-wrap">
                        <h3 class="mb-5 text-center">Quên mật khẩu</h3>
                        <form action="/forgetpass" method="POST" class="signin-form">
                            <div class="form-group">
                                <input type="email" class="form-control" name="Email" placeholder="Email của bạn"
                                    required>
                            </div>
                            <div class="form-group">
                                <button id="confirm1" type="submit" class="form-control btn-login submit px-3">Xác
                                    nhận</button>
                            </div>
                            <div class="form-group">
                                <a href="/login" class="btn btn-info">Quay lại</a>
                            </div>
                        </form>
                    </div>
                    <div class="login-wrap px-2 py-2" id="cofirm-wrap">
                        <h3 class="mb-5 text-center">Xác minh mã</h3>
                        <form action="/confirmcode" method="POST" class="signin-form">
                            <div class="form-group">
                                <input type="text" name="code" maxlength="6" class="form-control"
                                    placeholder="Mã xác minh là một chuỗi bao gồm 6 ký tự" required>
                            </div>
                            <div class="form-group">
                                <button id="confirm2" type="submit" class="form-control btn-login submit px-3">Xác
                                    nhận</button>
                            </div>
                            <div class="form-group">
                                <a href="/login" class="btn btn-info">Quay lại</a>
                            </div>
                        </form>
                    </div>
                    <div class="login-wrap px-2 py-2" id="update-wrap">
                        <h3 class="mb-5 text-center">Cập nhật mật khẩu</h3>
                        <form action="/changepass" method="post" class="signin-form">
                            <div class="form-group">
                                <input id="password-field" name="MatKhau" minlength="8" maxlength="25" type="password" class="form-control"
                                    placeholder="Mật khẩu mới" required>
                                <span toggle="#password-field"
                                    class="fa fa-fw fa-eye field-icon toggle-password"></span>
                            </div>
                            <div class="form-group">
                                <input id="password-field1"  minlength="8" maxlength="25" type="password" class="form-control"
                                    placeholder="Xác nhận lại mật khẩu" required>
                                <span toggle="#password-field1"
                                    class="fa fa-fw fa-eye field-icon toggle-password"></span>
                            </div>
                            <div class="form-group">
                                <button id="create-new" type="submit" class="form-control btn-login submit px-3">Xác
                                    nhận</button>
                            </div>
                            <div class="form-group">
                                <a href="/login" class="btn btn-info">Quay lại</a>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <script>
        $(document).ready(function () {
            $('#forget-wrap').show();
            $('#cofirm-wrap').hide();
            $('#update-wrap').hide();
            setTimeout(() => { }, 200);
        });
        /* $('#confirm1').on('click', function () {
            event.preventDefault();
            $('#forget-wrap').hide();
            $('#cofirm-wrap').show();
            $('#update-wrap').hide();

            });
            $('#confirm2').on('click', function () {
            event.preventDefault();
            $('#forget-wrap').hide();
            $('#cofirm-wrap').hide();
            $('#update-wrap').show();
            }); */
    // $('#confirm3').on('click', function(){
    // event.preventDefault();

    // });
    </script>
    @if (ViewBag.MessForget != null)
    {
        @if (ViewBag.MessForget.Equals("1"))
        {
            <script type="text/javascript" charset="utf-8">
                window.onload = function () {
                    setTimeout(() => { alert("Email bạn vừa nhập không hợp lệ!\nVui lòng kiểm tra và thử lại sau."); }, 500);
                };
            </script>
        }
        else if (ViewBag.MessForget.Equals("2"))
        {
            <script type="text/javascript" charset="utf-8">
                window.onload = function () {
                    setTimeout(() => { alert("Đang chuẩn bị mã xác nhận.\n Vui lòng chờ trong giây lát..."); }, 500);
                };
            </script>
        }
    }
    @if (ViewBag.MessSendMail != null)
    {
        @if (ViewBag.MessSendMail.Equals("1"))
        {
            <script type="text/javascript" charset="utf-8">
                window.onload = function () {
                    setTimeout(() => { alert("Mã xác nhận đã được gửi đến Email của bạn.\nVui lòng kiểm tra để lấy mã xác nhận"); }, 500);
                    $('#forget-wrap').hide();
                    $('#cofirm-wrap').show();
                    $('#update-wrap').hide();
                };
            </script>
        }
        else if (ViewBag.MessSendMail.Equals("2"))
        {
            <script type="text/javascript" charset="utf-8">
                window.onload = function () {
                    setTimeout(() => { alert("Đã có lỗi xảy ra khi gửi Email.\nVui lòng thử lại sau!"); }, 500);
                };
            </script>
        }
    }

    //
    @if (ViewBag.MessConfirmCode != null)
    {
        @if (ViewBag.MessConfirmCode.Equals("1"))
        {
            <script type="text/javascript" charset="utf-8">
                window.onload = function () {
                    setTimeout(() => { alert("Bước tiếp theo hãy nhập mất khẩu mới để tiếp tục trải nghiệm nhé."); }, 500);
                    $('#forget-wrap').hide();
                    $('#cofirm-wrap').hide();
                    $('#update-wrap').show();
                };

            </script>
        }
        else if (ViewBag.MessConfirmCode.Equals("2"))
        {
            <script type="text/javascript" charset="utf-8">
                window.onload = function () {
                    setTimeout(() => { alert("Mã xác minh không chính xác.\nVui lòng kiểm tra lại Email và thử lại sau!"); }, 1000);
                    $('#forget-wrap').hide();
                    $('#cofirm-wrap').show();
                    $('#update-wrap').hide();
                };
            </script>
        }
    }

    <script src="~/js/login.js"></script>
    <script src="~/js/main.js"></script>
</body>

</html>