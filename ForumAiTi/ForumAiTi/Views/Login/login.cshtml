@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Đăng nhập</title>
    <link rel="shortcut icon" href="~/images/logoIT-border.png" type="image/x-icon">
    <link rel="stylesheet" href="~/css/style-login.css">
    <!-- <link rel="stylesheet" href="css/style.css"> -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <!-- boostrap 4-6-2-->
    <!-- Latest compiled and minified CSS -->
    <link rel="stylesheet" href="~/dist/css/bootstrap.min.css">

    <!-- jQuery library -->
    <script src="~/dist/jquery/jquery.slim.min.js" type="text/javascript"></script>
    <!-- Popper JS -->
    <script src="~/dist/js/popper.min.js " ttype="text/javascript"></script>

    <!-- Latest compiled JavaScript -->
    <script src="~/dist/js/bootstrap.bundle.min.js" type="text/javascript"></script>
    <!--  -->
</head>

<body class="img js-fullheight" style="background-image: url(images/bg-forum.jpg);">
    <section class="ftco-section">
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-md-6 col-lg-5 col-10 login">
                    <a href="/home"><img class="logo-login" src="images/logoIT-border.png" alt=""></a>
                    <div class="login-wrap px-2 py-2">
                        <h3 class="mb-5 text-center">Bạn đã có tài khoản?</h3>
                        <form action="/login" method="POST" class="signin-form">
                            <div class="form-group">
                                <input type="text" name="TaiKhoan" class="form-control" placeholder="Tài khoản" required>
                            </div>
                            <div class="form-group">
                                <input id="password-field" name="MatKhau" type="password" class="form-control" placeholder="Mật khẩu"
                                    required>
                                <span toggle="#password-field"
                                    class="fa fa-fw fa-eye field-icon toggle-password"></span>
                            </div>
                            <div class="form-group">
                                <button type="submit" class="form-control btn-login submit px-3">Đăng nhập</button>
                            </div>
                            <div class="form-group d-md-flex row">
                                <div class="w-50 col-6">
                                    <label class="checkbox-wrap checkbox-primary">Lưu mật khẩu
                                        <input type="checkbox" checked>
                                        <span class="checkmark"></span>
                                    </label>
                                </div>
                                <div class="w-50 col-6 text-md-right">
                                    <a href="/forgetpass" style="color: #fff">Quên mật khẩu</a>
                                </div>
                            </div>
                            <div class="form-group">
                                <button type="button" class="form-control btn btn-createnew text-light px-3"><a
                                        href="/signup">Tạo tài khoản mới</a></button>
                            </div>
                        </form>
                        <p class="w-100 text-center">&mdash; Hoặc đăng nhập bằng &mdash;</p>
                        <div class="social d-flex text-center">
                            <a href="/loginWithfacebook" class="px-2 py-2 mr-md-1 rounded btn-facebook"><span
                                    class="ion-logo-facebook mr-2"></span><i class="fa fa-facebook-official"
                                    aria-hidden="true"></i>&nbsp;&nbsp; Facebook</a>
                            <a href="/loginWithgoogle" class="px-2 py-2 ml-md-1 rounded btn-google"><span
                                    class="ion-logo-twitter mr-2"></span><i class="fa fa-google-plus-square"
                                    aria-hidden="true"></i>&nbsp;&nbsp; Google</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
    @if (TempData["StatusLogin"] != null)
		{
            @if(TempData["StatusLogin"].Equals("1"))
            {
            <script type="text/javascript" charset="utf-8">
				window.onload = function () {
				alert("Tài khoản hoặc mật khẩu không chính xác.\nVui lòng thử lại!");
			};
			</script>
            }
            else if(TempData["StatusLogin"].Equals("2")){
                <script type="text/javascript" charset="utf-8">
				window.onload = function () {
				alert("Chúc mừng bạn đã trở thành thành viên mới của ForumAiTi.\nHãy đăng nhập để trải nghiệm ngay nào!");
			};
			</script>
            }else if(TempData["StatusLogin"].Equals("3")){
                <script type="text/javascript" charset="utf-8">
				window.onload = function () {
				alert("Chúc mừng bạn lấy lại mật khẩu thành công!\nHãy đăng nhập để trải nghiệm ngay nào!");
			};
			</script>
            }
			
		}
    <script src="~/js/main.js"></script>
</body>

</html>