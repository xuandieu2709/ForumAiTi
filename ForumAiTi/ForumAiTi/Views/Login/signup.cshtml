@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Đăng ký</title>
    <link rel="shortcut icon" href="~/images/logoIT-border.png" type="image/x-icon">
    <link rel="stylesheet" href="~/css/style-login.css">
    <!-- <link rel="stylesheet" href="css/style.css"> -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <!-- boostrap 4-6-2-->
    <!-- Latest compiled and minified CSS -->
    <link rel="stylesheet" href="~/dist/css/bootstrap.min.css">

    <!-- jQuery library -->
    <script src="~/dist/jquery/jquery.slim.min.js" type="text/javascript"></script>

    <!-- Popper JS -->
    <script src="~/dist/js/popper.min.js " type="text/javascript"></script>

    <!-- Latest compiled JavaScript -->
    <script src="~/dist/js/bootstrap.bundle.min.js" type="text/javascript"></script>
    <!--  -->
</head>
<body class="img js-fullheight" style="background-image: url(/images/bg-forum.jpg);">
        <section class="ftco-section">
            <div class="container">
                <div class="row justify-content-center">
                    <div class="col-md-6 col-lg-5 col-10 login">
                        <a href="/home"><img class="logo-login" src="/images/logoIT-border.png" alt=""></a>
                        <div class="login-wrap px-2 py-2">
                            <h3 class="mb-5 text-center">Tạo mới một tài khoản</h3>
                            <form action="/signup" method="POST" class="signin-form">
                                <div class="form-group">
                                    <input type="text" name="TaiKhoan" class="form-control" placeholder="Tài khoản" required>
                                </div>
                                <div class="form-group">
                                    <input type="text" name="HoTen" class="form-control" placeholder="Họ và tên" required>
                                </div>
                                <div class="form-group">
                                    <input type="email" name="Email" class="form-control" placeholder="Email" required>
                                </div>
                                <div class="form-group">
                                    <input id="password-field" type="password" class="form-control"
                                        placeholder="Mật khẩu" name="MatKhau" required>
                                    <span toggle="#password-field"
                                        class="fa fa-fw fa-eye field-icon toggle-password"></span>
                                </div>
                                <div class="form-group">
                                    <input id="password-field1" type="password" class="form-control"
                                        placeholder="Xác nhận mật khẩu" name="XNMatKhau" required>
                                    <span toggle="#password-field1"
                                        class="fa fa-fw fa-eye field-icon toggle-password"></span>
                                </div>
                                <div class="form-group">
                                    <button type="submit" id="create-new" class="form-control btn-login submit px-3">Tạo mới</button>
                                </div>
                                <div class="form-group">
                                    <a href="/login" class="btn btn-info">Quay lại</a>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </section>
        @if (ViewBag.MessSignUp != null)
		{
            @if(ViewBag.MessSignUp.Equals("1"))
            {
            <script type="text/javascript" charset="utf-8">
				window.onload = function () {
				alert("Tài khoản đã tồn tại.\nVui lòng sử dụng tài khoản khác và thử lại sau!");
			};
			</script>
            }
			
		}
        <script src="~/js/login.js"></script>
        <script src="~/js/main.js"></script>
    </body>

</html>